{
  "name": "cosmian_demos",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint '*/**/*.{ts,tsx}' --fix",
    "test:e2e": "wait-on -t 200000 http://localhost:3001 && cypress run --headless --browser chrome"
  },
  "dependencies": {
    "antd": "^4.24.7",
    "cloudproof_js": "^8.1.0",
    "cosmian_ui": "^0.0.42",
    "eslint": "^8.36.0",
    "eslint-plugin-react": "^7.32.2",
    "joi": "^17.9.1",
    "less": "^4.1.3",
    "localforage": "^1.10.0",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.9.0",
    "uuid": "^9.0.0",
    "wait-on": "^7.0.1"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.56.0",
    "@vitejs/plugin-react": "^3.0.0",
    "miragejs": "^0.1.47",
    "typescript": "^4.9.3",
    "vite": "^4.0.4"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "lint-staged": {
    "*/**/*.{ts,tsx}": "eslint --max-warnings=0"
  }
}
